import youtube_dl
import sys
import threading
import time

try:
 import youtube_dl
except ImportError:
 print('\nyoutube_dl not found, install using : pip install youtube_dl')
 exit()

search = ''

cycle = ['|', '/', '-', '\\']

for args in sys.argv[1:]:
 search += f"{args} "

if search == 'help ':
 print('Help'.center(40, '-'))
 print('Supply your query after the command :\nExample - python download NCS Jarico Island')
 exit()

if search == '':
 print('Nothing supplied, try : python download help')
 exit()

print(f"\nSearch : {search}")

opts = {
    'outtmpl': '%(id)s',
    'restrictfilenames': True,
    'noplaylist': True,
    'nocheckcertificate': True,
    'ignoreerrors': False,
    'logtostderr': False,
    'no_warnings': True,
    'quiet': True,
    'default_search': 'auto',
    'source_address': '0.0.0.0'
}

ydl = youtube_dl.YoutubeDL(opts)
info = ydl.extract_info(search, download=False)

if 'entries' in info:
 info = info['entries'][0]

id = info.get('id')
title = info.get('title')

print(f"\nObtained video title : {title}")

def animation():
 for v in cycle:
  time.sleep(0.1)
  sys.stdout.write(f'\rDownloading ... {v}  ')
  sys.stdout.flush()

def download():
 ydl.download([f"https://m.youtube.com/watch?v={id}"])

d = threading.Thread(target=download)
d.daemon = True
d.start()

while d.is_alive():
 animation()

